package com.cos.controllerdemo.web;


import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;


@RestController
public class HttpBodyController {

	private static final Logger log = LoggerFactory.getLogger(HttpBodyController.class)l;   
	
	
	@PostMapping("/body1")
	public String xwwwformurlencoded(String username) {
	
		   
	
		log.info(username);
		return "key=value 전송옴";
	}
	
	@PostMapping("/body2")
	public String plaintext() {
		return "plain/text 전송옴";
	}
	
	
	@PostMapping("/body3")
	public String applicationjson() {
		return "json 전송옴";
	}
	
}
